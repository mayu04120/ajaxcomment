<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>
<!--show  comments -->
<div id="comments">
	<%= render "posts/comment", post: @post %>
</div>
<!-- ｆｏｒｍを追加  -->
<!-- formforの後に半角スペース開けてはいけない -->
<!-- コントローラーをいじらないでもインスタンス変数を送ることができる？ -->
<%= form_for(@comment, url: post_comments_path(@post), remote: true) do | f | %>
	<%= f.text_field :body, id: 'body_field' %>
	<%= f.submit %>
<% end %>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
